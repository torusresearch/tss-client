{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "strict": false,
    "module": "es2015",
    "target": "es2015",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "dist", "pkg", "webpack"],
}
